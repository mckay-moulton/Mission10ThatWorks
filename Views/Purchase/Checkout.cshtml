
@{
}

@model Purchase

<h2>Check out now</h2>
<p>Please enter information here to be stored on a safe place on my personal laptop</p>

<form method="post" asp-action="Checkout">

    @*Add code that will alert the user if their inputs are not what our model is expecting*@
    <div asp-validation-summary="All" class="text-danger"></div>

    <h4>Ship To</h4>
    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <h4>Address</h4>

    <div class="form-group">
        <label asp-for="AddressLine1">AddressLine1</label>
        <input asp-for="AddressLine1" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AddressLine2">AddressLine2</label>
        <input asp-for="AddressLine2" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="AddressLine3">AddressLine3</label>
        <input asp-for="AddressLine3" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="Zip">Zip</label>
        <input asp-for="Zip" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Country">Country</label>
        <input asp-for="Country" class="form-control" />
    </div>

    <div class="checkbox">
        <label>
            <input asp-for="Anonymous" /> Donate Anonymously
        </label>
    </div>

    <div class="float-end">
        <input class="btn btn-primary" type="submit" value="Send Donation" />
    </div>

</form>