@inherits LayoutComponentBase

<div class="bg-info text-hite p-2">
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <span class="navbar-brand m-lg-2 text-monospace text-black-50 text-center">Bookstore Project Administration</span>
            </div>
            @*add logout button*@
            <div class="col-2 text-right">
                <a class="btn btn-sm btn-primary" href="/account/logout">Log Out</a>
            </div>
        </div>
    </div>

</div>

<div class="container-fluid">
    @*using grid system here!*@
    <div class="row p-2" d-grid>
        <div class="col-3 ">
            @*we aren't going to use a tags in a blazer setup, but NavLinks*@
            <NavLink class="btn btn-outline-primary" href="/admin/Books" 
                     ActiveClass="btn-primary text-white" Match="NavLinkMatch.Prefix">Books</NavLink>
            @*second link for shared layout*@ 
            @*Both links should match the other two razor page paths defined within the admin folder*@
            <NavLink class="btn btn-primary" href="/admin/PurchaseInfo"
                    ActiveClass="btn-primary text-white" Match="NavLinkMatch.Prefix">Purchase Info</NavLink>
            <NavLink class="btn btn-primary" href="/admin/Books/create"
                     ActiveClass="btn-primary text-white" Match="NavLinkMatch.Prefix">Add New Book</NavLink>
        </div>
        <div class="col justify-content-lg-between">
            @Body
        </div>
    </div>
</div>